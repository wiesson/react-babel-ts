{
  "name": "babel-typescript-sample",
  "scripts": {
    "type-check": "tsc --noEmit",
    "start": "webpack-dev-server --history-api-fallback --config webpack.dev.js",
    "build": "tsc --emitDeclarationOnly && babel src --out-dir build --extensions \".ts,.tsx\"",
    "format": "prettier --single-quote --trailing-comma es5 --write 'src/**/*.+(ts|js|css)'"
  },
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/react": "^16.4.12",
    "@types/react-dom": "^16.0.7",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "babel-loader": "^8.0.0",
    "prettier": "^1.14.2",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.6"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
